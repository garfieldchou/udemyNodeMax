<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<%=  editing === 'true' ? 'edit-product': 'add-product' %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" <% if(editing === 'true') { %>value="<%= product.title %>"<% } %>>
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" <% if(editing === 'true') { %>value="<%= product.imageUrl %>"<% } %>>
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" <% if(editing === 'true') { %>value="<%= product.price %>"<% } %>>
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if(editing === 'true') { %><%= product.description %><% } %></textarea>
            </div>
            <% if(editing === 'true') { %>
            <input type="hidden" value="<%= product.id %>" name="productId">
            <% } %>
            <button class="btn" type="submit"><%= editing === 'true'? "Update Product": "Add Product" %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>
